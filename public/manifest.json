{
  "manifest_version": 3,

  "name": "Searchable Bookmarks Manager",
  "description": "Search through your bookmarks easily with a popup manager, straight from your address bar!",
  "version": "3",
  "short_name": "SBM",

  "commands": {
    "_execute_browser_action": {
      "description": "Searchable Bookmarks Manager"
    }
  },

  "action": {
    "default_popup": "index.html"
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "storage",
    "favicon"
  ]
}